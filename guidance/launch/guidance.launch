<launch>

  <!-- Start SLAM -->
  <include file="$(find otter_slam)/launch/kingfisher.launch">
    <arg name="rviz" value="false" />
  </include>

  <!-- Map inflating -->
  <include file="$(find map_inflating)/launch/map_inflating.launch">
    <arg name="inflating_radius" value="4.0" />
  </include>

  <!-- Guidance node -->
  <node name="guidance_node" pkg="guidance" type="guidance_node" output="screen">
  </node>

  <!-- Visualize in rviz -->
  <node name="rviz" pkg="rviz" type="rviz" required="true"
    args="-d $(find coverage_boustrophedon)/config/coverage.rviz" />

  <!-- Convert Twist messages to Drive messages -->
  <node pkg="vmrc_gazebo" type="twist2thrust.py" name="twist2thrust" output="screen" args="--keyboard">
    <remap from="left_cmd"  to="left_thrust_cmd"/>
    <remap from="right_cmd" to="right_thrust_cmd"/>
  </node>

</launch>
