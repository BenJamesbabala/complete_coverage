<launch>

    <arg name="lidar" default="true" />

    <!-- Start SLAM -->
    <include file="$(find otter_slam)/launch/slam.launch">
        <arg name="lidar" value="$(arg lidar)" />
        <arg name="rviz" value="false" />
    </include>

    <!-- Create a map from the cartographer submaps -->
    <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
        type="cartographer_occupancy_grid_node" args="-resolution 0.10" />

    <node name="map_processing_node" pkg="otter_coverage" type="map_processing_node" output="screen">
        <param name="inflation_radius" value="0.2" />
    </node>

    <node name="guidance_node" pkg="otter_coverage" type="guidance_node" output="screen">
    </node>

    <!-- Visualize in rviz -->
    <node name="rviz" pkg="rviz" type="rviz" required="true"
        args="-d $(find otter_coverage)/config/coverage.rviz" />

</launch>
