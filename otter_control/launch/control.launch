<?xml version="1.0" ?>
<launch>
  <rosparam command="load" file="$(find otter_control)/config/control.yaml" />

  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" args="otter_joint_publisher otter_velocity_controller --shutdown-timeout 1" />
  
  <node pkg="topic_tools" type="relay" name="cmd_vel_relay"
        args="cmd_vel otter_velocity_controller/cmd_vel" />
</launch>
